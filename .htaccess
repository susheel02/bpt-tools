# Depth of Field Calculator - Security Configuration

# Enable rewrite engine
RewriteEngine On

# Canonical URL redirect - Force www on production
RewriteCond %{HTTP_HOST} ^beyondphototips\.com$ [NC]
RewriteRule ^(.*)$ https://www.beyondphototips.com%{REQUEST_URI} [R=301,L]

# Prevent access to sensitive files
<Files ".htaccess">
    Require all denied
</Files>

<Files "*.md">
    Require all denied
</Files>

<Files ".git*">
    Require all denied
</Files>

# Prevent directory browsing
Options -Indexes

# Security headers for enhanced protection
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always append X-Frame-Options SAMEORIGIN
    
    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options nosniff
    
    # Enable XSS protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Block access to common exploit files
<FilesMatch "(^\.|\.(env|log|ini|conf|bak|backup|old|tmp|temp|swp|cache))$">
    Require all denied
</FilesMatch>

# Prevent execution of PHP in uploads/temp directories if they exist
<IfModule mod_php.c>
    php_flag engine off
</IfModule>

